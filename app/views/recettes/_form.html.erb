<%= render 'shared/errors', obj: @recette %>

<div class= "row" >
    <%= form_for(@recette, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
            <div class= "col-sm-2 control-label">
                <%= f.label :Recette %>
            </div>
            <div class= "col-sm-8">
                <%= f.text_field :title, class: "form-control", placeholder: "Nom de la recette" %>
            </div>
        </div>
        <div class="form-group">
           <div class= "col-sm-2 control-label">
                <%= f.label :Description %>
            </div>
            <div class= "col-sm-8">
                 <%= f.text_area :description, class: "form-control", placeholder: "Description" %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <%= f.label :'Ingrédients' %>
            </div>
            <div class= "col-sm-8">
                 <%= f.text_area :ingredients, class: "form-control", placeholder: "Ingrédients" %>
            </div>
            
        </div>  
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <%= f.label :Etapes %>
            </div>
            <div class= "col-sm-8">
                 <%= f.text_area :etapes, class: "form-control", placeholder: "Etapes" %>
            </div>
            
        </div>    
        <div class="group-form">
            <div class="col-sm-offset-5 col-sm-8">
                <%= f.submit(@recette.new_record? ? "Créer" : "Mettre à jour", class: "btn btn-success") %>
            </div>
        </div>
    
    <% end %>
</div>
<div class="col-sm-10">
    <div class= "retour">
        <%= link_to "Retour à la liste", recettes_path, class: "btn btn-xs btn-primary" %>
    </div>
</div>