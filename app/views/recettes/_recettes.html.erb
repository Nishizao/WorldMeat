<table class= "table">
    <thead>
        <tr>
            <th>Recette</th>
            <th>Ingredients</th>
            <th>Cr√©ateur</th>
            <th>Actions</th>
        </tr> 
    </thead>
            
    <% obj.each do |recette| %>
        <tr>
            <td><%= link_to recette.title, recette_path(recette) %></td>
            <td><%= recette.description %></td>
            <td><%= recette.user.username if recette.user %></td>
            <% if logged_in? and current_user == recette.user %>
                <td><%= link_to "Editer", edit_recette_path(recette), class: "btn btn-xs btn-success" %></td>
                <td><%= link_to "Supprimer", recette_path(recette), method: :delete, class: "btn btn-xs btn-danger" %></td>
            <% end %>
        </tr>
    <% end %>
</table>