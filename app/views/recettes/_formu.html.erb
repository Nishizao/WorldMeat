<%= render 'shared/errors', obj: @recette %>

<div class= "row" >
    <%= form_for(@recette, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
            <div class= "col-sm-2 control-label">
                <%= f.label :Recette %>
            </div>
            <div class= "col-sm-8">
                <%= f.text_field :title, class: "form-control", placeholder: "Nom de la recette" %>
            </div>
        </div>
        <div class="form-group">
           <div class= "col-sm-2 control-label">
                <%= f.label :Ingredient %>
            </div>
            <div class= "col-sm-8">
                 <%= f.text_area :description, class: "form-control", placeholder: "Description de la recette" %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <%= f.label :Etapes %>
            </div> 
            
        </div>    
        <div class="group-form">
            <div class="col-sm-offset-2 col-sm-10">
                <input class="btn btn-success" type="submit" value="Modifier">
            </div>
        </div>
    
    <% end %>
</div>
