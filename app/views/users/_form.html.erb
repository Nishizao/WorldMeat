<%= render 'shared/errors', obj: @user %>

<div class= "row" >
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
            <div class= "col-sm-2 control-label">
                <%= f.label :Email %>
            </div>
            <div class= "col-sm-8">
                <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
            </div>
        </div>
        <div class="form-group">
           <div class= "col-sm-2 control-label">
                <%= f.label :Identifant %>
            </div>
            <div class= "col-sm-8">
                 <%= f.text_field :username, class: "form-control", placeholder: "Identifiant" %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <%= f.label :'Mot de passe' %>
            </div>
            <div class= "col-sm-8">
                 <%= f.password_field :password, class: "form-control", placeholder: "Mot de passe" %>
            </div>
            
        </div>    
        <div class="group-form">
            <div class="col-sm-offset-5 col-sm-8">
                 <%= f.submit(@user.new_record? ? "Créer" : "Mettre à jour", class: "btn btn-success") %>
            </div>
        </div>
    
    <% end %>
</div>
<div class="col-sm-10">
    <div class= "retour">
        <%= link_to "Retour à la liste", recettes_path, class: "btn btn-xs btn-primary" %>
    </div>
</div>