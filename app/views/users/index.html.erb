<h1 align ="center">Liste des profils</h1></br>

<div class="row">   
    <div class="col-xs-8 col-xs-offset-2">
        <div align="center">
            <%= will_paginate @user %>
        </div>
        <div class="list-group">
            <% @user.each do |user| %>
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h3 class="panel-title">
                        <%= gravatar_for user, size:25 %>
                        <%= link_to user.username, user_path(user) %>
                    </h3>
                  </div>
                  <div class="panel-body">
                    <%= pluralize(user.recettes.count, "recette") if user.recettes %>
                  </div>
                </div>
            <% end %>
            <div align="center">
                <%= will_paginate @user %>
            </div>
        </div>
    </div>
</div> 